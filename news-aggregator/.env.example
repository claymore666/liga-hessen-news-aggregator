# Liga Hessen News Aggregator - Environment Configuration

# =============================================================================
# LLM Configuration
# =============================================================================

# Ollama (Local LLM) - Primary provider
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenRouter (Cloud LLM) - Fallback provider
# Get your API key at https://openrouter.ai/
OPENROUTER_API_KEY=
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database path (relative to backend directory)
DATABASE_URL=sqlite:///./data/liga_news.db

# =============================================================================
# Application Settings
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable/disable scheduled fetching
SCHEDULER_ENABLED=true

# Default fetch interval for new sources (minutes)
DEFAULT_FETCH_INTERVAL=60

# =============================================================================
# Email Notifications (Optional)
# =============================================================================

# Enable email notifications for critical items
EMAIL_ENABLED=false
EMAIL_RECIPIENTS=

# =============================================================================
# Security (Production)
# =============================================================================

# Secret key for session management (generate a random string for production)
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
